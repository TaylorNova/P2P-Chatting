<Window x:Class="MyQQ.VoiceWaiting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyQQ"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" WindowStyle="None"
        ResizeMode="NoResize"
        mc:Ignorable="d" Title="messegebox" Height="100" Width="100">
    <Grid>
        <TextBox x:Name="messege" HorizontalAlignment="Left" Height="39" 
                     Margin="10,5,0,0" TextWrapping="Wrap" Text="waiting..." VerticalAlignment="Top" Width="84" Background="{x:Null}" BorderBrush="{x:Null}" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="21" FontFamily="方正经黑简体" Foreground="#000000"/>
        <ProgressBar
          x:Name="signal"
          Style="{StaticResource MaterialDesignCircularProgressBar}"
          Value="0"
          IsIndeterminate="True" Margin="39,56,41,24" />
    </Grid>
</Window>
